#!/bin/bash
# info: unsuspend databases
# options: USER
#
# This function for unsuspending all user's databases.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
user=$1

# Includes
# shellcheck source=/etc/tuliocp/tulio.conf
source /etc/hestiacp/tulio.conf
# shellcheck source=/usr/local/tulio/func/main.sh
source $HESTIA/func/main.sh
# shellcheck source=/usr/local/tulio/func/db.sh
source $HESTIA/func/db.sh
# load config file
source_conf "$HESTIA/conf/tulio.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'USER'
is_format_valid 'user'
is_system_enabled "$DB_SYSTEM" 'DB_SYSTEM'
is_object_valid 'user' 'USER' "$user"

# Perform verification if read-only mode is enabled
check_tulio_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Starting unsuspend loop
for database in $(search_objects 'db' 'SUSPENDED' "yes" 'DB'); do
	$BIN/v-unsuspend-database "$user" "$database"
done

#----------------------------------------------------------#
#                       TulioCP                            #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$ARGUMENTS"

exit
