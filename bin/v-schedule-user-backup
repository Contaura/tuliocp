#!/bin/bash
# info: schedule user backup creation
# options: USER
#
# example: v-schedule-user-backup admin
#
# This function for scheduling user backup creation.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
user=$1

# Includes
# shellcheck source=/etc/tuliocp/tulio.conf
source /etc/tuliocp/tulio.conf
: "${TULIO:=/usr/local/tulio}"
# shellcheck source=/usr/local/tulio/func/main.sh
source $TULIO/func/main.sh
# load config file
source_conf "$TULIO/conf/tulio.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'USER'
is_format_valid 'user'
is_system_enabled "$BACKUP_SYSTEM" 'BACKUP_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_backup_enabled
is_backup_scheduled 'backup'

# Perform verification if read-only mode is enabled
check_tulio_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Adding backup task to  the queue
log=$TULIO/log/backup.log
echo "$BIN/v-backup-user $user yes >> $log 2>&1" >> $TULIO/data/queue/backup.pipe

#----------------------------------------------------------#
#                       TulioCP                            #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$ARGUMENTS"

exit
