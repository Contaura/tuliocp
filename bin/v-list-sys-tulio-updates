#!/bin/bash
# info: list system updates
# options: [FORMAT]
#
# example: v-list-sys-tulio-updates
#
# This function checks available updates for tulio packages.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
format=${1-shell}

# Includes
# shellcheck source=/etc/tuliocp/tulio.conf
source /etc/tuliocp/tulio.conf
: "${TULIO:=/usr/local/tulio}"
# shellcheck source=/usr/local/tulio/func/main.sh
source $TULIO/func/main.sh
# load config file
source_conf "$TULIO/conf/tulio.conf"

fields="\$NAME \$VERSION \$ARCH \$UPDATED \$DESCR \$TIME \$DATE"

# Check details of installed .deb package function
check_installed_deb() {
	dpkg_data=$(dpkg-query -s $1)
	pkg_date=$(stat -c "%Y" /var/lib/dpkg/info/$1.list)
	ARCH=$(echo "$dpkg_data" | grep Architecture | cut -f 2 -d ' ')
	VERSION=$(echo "$dpkg_data" | grep ^Version | cut -f 2 -d ' ')
	DATE=$(date -d @$pkg_date +"%F")
	TIME=$(date -d @$pkg_date +"%T")
}

# JSON list function
json_list() {
	IFS=$'\n'
	i=1
	objects=$(echo -e "$data" | grep NAME | wc -l)
	echo "{"
	for str in $(echo -e "$data"); do
		parse_object_kv_list "$str"
		echo -n '    "'$NAME'": {
        "VERSION": "'$VERSION'",
        "ARCH": "'$ARCH'",
        "UPDATED": "'$UPDATED'",
        "DESCR": "'$DESCR'",
        "TIME": "'$TIME'",
        "DATE": "'$DATE'"
    }'
		if [ "$i" -lt "$objects" ]; then
			echo ','
		else
			echo
		fi
		((i++))
	done
	echo '}'
}

# SHELL list function
shell_list() {
	IFS=$'\n'
	echo "PKG   VER   ARCH   UPDT   DATE"
	echo "---   ---   ----   ----   ----"
	for str in $(echo -e "$data"); do
		parse_object_kv_list "$str"
		echo "$NAME $VERSION $ARCH $UPDATED $DATE"
	done
}

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Checking official latest version
tulio_v=$(apt-cache policy tulio | grep Candidate | cut -d ':' -f 2 | xargs)
nginx_v=$(apt-cache policy tulio-nginx | grep Candidate | cut -d ':' -f 2 | xargs)
php_v=$(apt-cache policy tulio-php | grep Candidate | cut -d ':' -f 2 | xargs)

# Checking installed tulio version
check_installed_deb tulio

UPDATED='yes'
if [ -n "$tulio_v" ] && [ "$tulio_v" \> "$VERSION" ]; then
	UPDATED='no'
fi

data="NAME='tulio' VERSION='$VERSION' ARCH='$ARCH'"
data="$data UPDATED='$UPDATED' DESCR='Tulio core package' TIME='$TIME' DATE='$DATE'"

# Checking installed tulio-php version
check_installed_deb tulio-php

UPDATED='yes'
if [ -n "$php_v" ] && [ "$php_v" \> "$VERSION" ]; then
	UPDATED='no'
fi

data="$data\nNAME='tulio-php' VERSION='$VERSION'"
data="$data ARCH='$ARCH' UPDATED='$UPDATED' DESCR='Tulio internal php interpreter'"
data="$data TIME='$TIME' DATE='$DATE'"

# Checking installed tulio-nginx version
check_installed_deb tulio-nginx

UPDATED='yes'
if [ -n "$nginx_v" ] && [ "$nginx_v" \> "$VERSION" ]; then
	UPDATED='no'
fi

data="$data\nNAME='tulio-nginx' VERSION='$VERSION'"
data="$data ARCH='$ARCH' UPDATED='$UPDATED' DESCR='Tulio internal web server'"
data="$data TIME='$TIME' DATE='$DATE'"

# Listing data
case $format in
	json) json_list ;;
	plain) plain_list ;;
	csv) csv_list ;;
	shell) shell_list | column -t ;;
esac

#----------------------------------------------------------#
#                       TulioCP                            #
#----------------------------------------------------------#

exit
