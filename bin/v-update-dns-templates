#!/bin/bash
# info: update dns templates
# options: [RESTART]
#
# example: v-update-dns-templates
#
# This function for obtaining updated dns templates from Tulio package.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
restart=$1

# Includes
# shellcheck source=/etc/tuliocp/tulio.conf
source /etc/tuliocp/tulio.conf
: "${TULIO:=/usr/local/tulio}"
: "${HESTIA:=$TULIO}"
# shellcheck source=/usr/local/tulio/func/main.sh
source $HESTIA/func/main.sh
# load config file
source_conf "$HESTIA/conf/tulio.conf"

# Perform verification if read-only mode is enabled
check_tulio_demo_mode

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

is_format_valid 'restart'

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Update templates
cp -rf $HESTIA_COMMON_DIR/templates/dns $HESTIA/data/templates/

#----------------------------------------------------------#
#                       TulioCP                            #
#----------------------------------------------------------#

$BIN/v-log-action "system" "Info" "Updates" "Default DNS zone templates updated."
exit
