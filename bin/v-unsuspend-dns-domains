#!/bin/bash
# info: unsuspend dns domains
# options: USER [RESTART]
#
# example: v-unsuspend-dns-domains alice
#
# This function unsuspends all user's DNS domains.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
user=$1
restart=${3-no}

# Includes
# shellcheck source=/etc/tuliocp/tulio.conf
source /etc/tuliocp/tulio.conf
: "${TULIO:=/usr/local/tulio}"
: "${HESTIA:=$TULIO}"
# shellcheck source=/usr/local/tulio/func/main.sh
source $HESTIA/func/main.sh
# load config file
source_conf "$HESTIA/conf/tulio.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'USER [RESTART]'
is_format_valid 'user' 'restart'
is_system_enabled "$DNS_SYSTEM" 'DNS_SYSTEM'
is_object_valid 'user' 'USER' "$user"

# Perform verification if read-only mode is enabled
check_tulio_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Starting unsuspend loop
for domain in $(search_objects 'dns' 'SUSPENDED' "yes" 'DOMAIN'); do
	$BIN/v-unsuspend-dns-domain "$user" "$domain" "$restart"
done

#----------------------------------------------------------#
#                       TulioCP                            #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$ARGUMENTS"

exit
