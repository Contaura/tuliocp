#!/bin/bash
# info: suspend databases
# options: USER
#
# example: v-suspend-databases admin
#
# This function for suspending of all databases of a single user.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
user=$1

# Includes
# shellcheck source=/etc/tuliocp/tulio.conf
source /etc/tuliocp/tulio.conf
: "${TULIO:=/usr/local/tulio}"
# shellcheck source=/usr/local/tulio/func/main.sh
source $TULIO/func/main.sh
# load config file
source_conf "$TULIO/conf/tulio.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'USER'
is_format_valid 'user'
is_system_enabled "$DB_SYSTEM" 'DB_SYSTEM'
is_object_valid 'user' 'USER' "$user"

# Perform verification if read-only mode is enabled
check_tulio_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Starting suspend loop
for database in $(search_objects 'db' 'SUSPENDED' "no" 'DB'); do
	$BIN/v-suspend-database "$user" "$database"
done

#----------------------------------------------------------#
#                       TulioCP                            #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$ARGUMENTS"

exit
